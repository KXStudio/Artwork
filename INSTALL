#############################################################
# In order to use this artwork, install the files like this:

# Make required directories
mkdir -p /lib/plymouth/themes/
mkdir -p /usr/share/gnome-background-properties/
mkdir -p /usr/share/xfce4/backdrops/
mkdir -p /usr/share/wallpapers/

# KDE5 Stuff
cp -r -P desktoptheme/*  /usr/share/plasma/desktoptheme/
cp -r -P look-and-feel/* /usr/share/plasma/look-and-feel/

# Plymouth
cp -r plymouth/* /lib/plymouth/themes/

# Wallpapers (KDE, Gnome and XFCE compatible)
cp wallpapers/kxstudio-wallpapers.xml                          /usr/share/gnome-background-properties/
cp wallpapers/KXStudio-Black/contents/images/1600x1200.jpg     /usr/share/xfce4/backdrops/
cp wallpapers/KXStudio-Heartbeat/contents/images/1920x1200.png /usr/share/xfce4/backdrops/
cp wallpapers/KXStudio-KDE3/contents/images/1920x1440.jpg      /usr/share/xfce4/backdrops/
cp wallpapers/KXStudio-Stripes/contents/images/1920x1200.jpg   /usr/share/xfce4/backdrops/
cp -r wallpapers/KXStudio-*                                    /usr/share/wallpapers/
